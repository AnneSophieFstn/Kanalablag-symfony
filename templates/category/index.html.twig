{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <div class="container">
    <h1>Les cat√©gories</h1>

        <a href="{{ path('app_category_new') }}" type="button" class="btn btn-primary my-4"><i class="fa-solid fa-plus mx-2"></i>Ajouter</a>

    <table class="table table-primary">
        <thead>
            <tr>
                <th>Id</th>
                <th>Categorie</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr class="table-light">
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td class="d-flex align-items-center">
                    <a href="{{ path('app_category_show', {'id': category.id}) }}"><i class="fa-solid fa-eye  mx-2"></i></a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}"><i class="fa-solid fa-pen-to-square" style="color: #f5d152;"></i></a>
                    {{ include('category/_delete_form.html.twig') }}                
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        </div>
{% endblock %}
