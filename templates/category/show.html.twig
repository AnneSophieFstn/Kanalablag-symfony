{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
    <div class="container">
        <h1>Categorie</h1>

        <a href="{{ path('app_category_index') }}" class="btn btn-primary my-4">Voir toute les categories</a>

        <table class="table table-primary">
            <tbody>
                <tr>
                    <th>Id</th>
                    <th>Categorie</th>
                    <th scope="col" class="d-flex justify-content-center">Actions</th>
                </tr>
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>
                        <a href="{{ path('app_category_edit', {'id': category.id}) }}"><i class="fa-solid fa-pen-to-square" style="color: #f5d152;"></i></a>
                    </td>
                </tr>
            </tbody>
        </table>

    </div>
{% endblock %}
