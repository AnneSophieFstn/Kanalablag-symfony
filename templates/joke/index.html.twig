{% extends 'base.html.twig' %}

{% block title %}Joke index{% endblock %}

{% block body %}

    <div class="container">
        <h1>Les blagues</h1>

        <a href="{{ path('app_joke_new') }}" type="button" class="btn btn-primary my-4"><i class="fa-solid fa-plus mx-2"></i>Ajouter</a>


        <table class="table table-primary">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Categorie</th>
                    <th scope="col">Blague</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for joke in jokes %}
                <tr class="table-light">
                    <td>{{ joke.id }}</td>
                    <td>{{ joke.category }}</td>
                    <td>{{ joke.text }}</td>
                    <td class="d-flex align-items-center">
                        <a href="{{ path('app_joke_show', {'id': joke.id}) }}"><i class="fa-solid fa-eye  mx-2"></i></a>
                        <a href="{{ path('app_joke_edit', {'id': joke.id}) }}"><i class="fa-solid fa-pen-to-square" style="color: #f5d152;"></i></a>
                        {{ include('joke/_delete_form.html.twig') }}

                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}
